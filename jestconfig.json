{
    "transform": {
        "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/!(index).{ts,tsx}"
    ],
    "coverageReporters": [
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100
      }
    }
}